{
  "openapi": "3.0.1",
  "info": {
    "title": "BookStore",
    "version": "1.0"
  },
  "paths": {
    "/api/Book/create": {
      "post": {
        "tags": [
          "Book"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateOrUpdate"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateOrUpdate"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CreateOrUpdate"
              }
            }
